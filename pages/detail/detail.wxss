.detail-content {
    padding: 10px 10px 0;
    min-height: 100%;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    overflow: hidden;
    line-height: 1.6;
}
.detail-content .tittle {
    font-size: 48rpx;
    font-weight: bold;
    padding-bottom: 20rpx;
    line-height: 1.3;
    color: #000;
}
.detail-content .subtitle {
    padding-bottom: 36rpx;
}

.detail-content .author {
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #505050;
    height: auto;
    line-height: 1;
}

.detail-content .time {
    font-size: 28rpx;
    color: #8c8c8c;
    height: auto;
    line-height: 1;
}
.detail-content .wxParse {
    overflow: hidden;
}
.detail-content .wxParse-p {
    font-size: 14px;
    margin-bottom: 16px;
    color: #3e3e3e;
}
.detail-content .wxParse-img {
    display: block;
    width: 100% !important;
}